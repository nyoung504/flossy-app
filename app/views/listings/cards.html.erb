<meta name="viewport" content="width=device-width, initial-scale=1.0">
<div class="container">
<div class= "row">
  <% @listings.each do |listing|%>
      <div class="col-md-4">
          <div class="card" style="width: 18rem;">
          <%= image_tag(listing.image, class:'card-img-top') if listing.image.attached? %>
          <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text item-description"><%= listing.description %></p>
          <p class="card-text">$<%= listing.price %>
          <%= link_to "See More", listing_path(listing.id), class:"btn btn-primary btn-right" %>
          <button class="stripe" data-id="<%= listing.id %>">Buy</button>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>

<%= javascript_pack_tag "stripe" %>